@{
    ViewData["Title"] = "Trails";
    ViewData["Message"] = "Lost in the Woods";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h1 class="text-center">@ViewData["Message"]</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Trail Name</th>
                    <th>Trail Length</th>
                    <th>Elevation Change</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var trail in ViewBag.trails)
                {
                    <tr>
                        <td><a href="Trail/@trail.Id">@trail.name</a></td>
                        <td>@trail.trail_length</td>
                        <td>@trail.elevation</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
    <div class="col-md-3">
        <a href="NewTrail" class="btn btn-primary">Add A New Trail</a>
    </div>
</div>