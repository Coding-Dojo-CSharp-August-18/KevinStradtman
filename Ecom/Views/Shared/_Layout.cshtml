          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            User
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" asp-controller="Home" asp-action="Register">Register</a>
            <a class="dropdown-item" asp-controller="Home" asp-action="Login">Login</a>
            <a class="dropdown-item" href="#"></a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>
    <div class="container mt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Ecommerce</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/theme/assets/js/core/jquery.min.js"></script>
        <script src="~/theme/assets/js/core/bootstrap.min.js"></script>
        <script src="~/theme/assets/js/core/popper.min.js"></script>
        <script src="~/theme/assets/js/now-ui-kit.min.js"></script>
        <script src="~/theme/assets/js/plugins/bootstrap-selectpicker.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>