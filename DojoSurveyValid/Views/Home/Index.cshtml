@{
    ViewData["Title"] = "DojoSurvey";
}
@using System.ComponentModel.DataAnnotations;
@using DojoSurveyValid.Models;
@model FormData
<div class="row">
    <div class="col-md-8 offset-2">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <h3 class="text-center">@ViewData["Message"]</h3>
        <form asp-action="ResultData" asp-controller="Home" method="POST">
            <div class="form-group">
                <span asp-validation-for="Name"></span><br>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Location"></span><br>
                <label asp-for="Location"></label>
                <select asp-for="Location" class="form-control">
                    <option value="Washington D.C.">Washington D.C.</option>
                    <option value="Austin Texas">Austin Texas</option>
                    <option value="Seattle">Seattle</option>
                    <option value="Redmond">Redmond</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Language"></span><br>
                <label asp-for="Language"></label>
                <select asp-for="Language" class="form-control">
                    <option value="PHP">PHP</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="C#">C#</option>
                    <option value="C++">C++</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Comment"></span><br>
                <label asp-for="Comment">Comment</label>
                <textarea asp-for="Comment" class="form-control" cols="30" rows="10"></textarea>
            </div>
            <input type="submit" value="POST" class="btn btn-primary">
        </form>
    </div>
</div>