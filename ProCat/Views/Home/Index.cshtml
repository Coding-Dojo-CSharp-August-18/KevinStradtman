@model ProCat.Models.Product

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Products</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var p in ViewBag.products)
                {
                    <tr>
                        <td>@p.product_id</td>
                        <td><a href="product/@p.product_id">@p.name</a></td>
                        <td>@p.description</td>
                        <td>@p.price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>