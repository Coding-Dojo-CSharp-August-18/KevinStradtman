@model ProCat.Models.Product

<div class="row">
    <div class="col-md-12">
        <h1>@Model.name</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Categories</h3>
        @foreach (var c in Model.CatPro)
        {
            <p>@c.Categories.name</p>
        }
    </div>
    <div class="col-md-6">
        <form asp-action="AddCategoryToProduct" asp-controller="Home" method="POST">
            <div class="form-group">
                <select name="categoryid" class="form-control">
                    @foreach(var c in @ViewBag.categories)
                    {
                        <option value="@c.category_id">@c.name</option>
                    }
                </select>
                <input type="hidden" name="productid" value="@Model.product_id">
            </div>
            <input type="submit" value="Add" class="btn btn-success">
        </form>
    </div>
</div>