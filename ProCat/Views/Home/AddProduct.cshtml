@model ProCat.Models.AddProduct

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Add Product</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="ProcessProduct" asp-controller="Home" method="POST">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="name"></span>
                </div>
                <br>
                <input asp-for="name" class="form-control" placeholder="Product Name">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="description"></span>
                </div>
                <br>
                <textarea asp-for="description" class="form-control" placeholder="Description" cols="30" rows="10"></textarea>  
            </div>
            <div class="form-group">
                <input asp-for="price" class="form-control" placeholder="Price">
            </div>
            <input type="submit" value="Submit" class="btn btn-primary btn-round">
        </form>
    </div>
</div>
